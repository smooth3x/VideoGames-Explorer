<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <ImageView
            android:id="@+id/gameImage"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginBottom="16dp"
            android:scaleType="fitXY"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/gameName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:text="Game Name"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:text="About"
            android:textAlignment="center"
            android:textColor="#32B637"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/gameDeck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Game Deck"
            android:textAlignment="center"
            android:textColor="#B0B0B0"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:text="Release Date"
            android:textAlignment="center"
            android:textColor="#32B637"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/gameReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Release Date"
            android:textAlignment="center"
            android:textColor="#B0B0B0"
            android:textSize="16sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textPlatforms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:text="Platforms"
            android:textAlignment="center"
            android:textColor="#32B637"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/gamePlatforms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Platforms"
            android:textAlignment="center"
            android:textColor="#B0B0B0"
            android:textSize="16sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/gameTrailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#959292"
            android:drawableLeft="@drawable/youtube_logo"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Trailer"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/gamePurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#D7A936"
            android:drawableLeft="@drawable/g2a_logo"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Buy Now"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>
